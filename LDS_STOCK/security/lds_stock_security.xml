<odoo>
    <data>
        <record id="group_lds_manager" model="res.groups">
            <field name="name">LDS / Manager</field>
        </record>

        <record id="only_responsible_can_modify" model="ir.rule">
            <field name="name">Only Responsible can modify Letters</field>
            <field name="model_id" ref="group_lds_manager"/>
            <field name="groups" eval="[(4, ref('lds_stock.group_lds_manager'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="domain_force">
                ['|', ('responsible_id','=',False),
                      ('responsible_id','=',user.id)]
            </field>
        </record>


    </data>
</odoo>