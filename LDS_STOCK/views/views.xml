<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='lds_logistic_letter_form' model='ir.ui.view'>
        <field name="name">lds.logistic.letter.form</field>
        <field name="model">lds.logistic.letter</field>
        <field name="arch" type="xml">
            <form string="Logistic Letter">
                <header>
                    <field name="state_id"  widget="statusbar" clickable="True" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. CDMX SUR"/>
                        </h1>
                        <label for="tag_ids" class="oe_edit_only"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                    </div>
                    <group col="2" string="General Properties">
                        <group >
                            <field name="name" />
                            <field name="delivery_id" />
                        </group>
                        <group >
                            <field name="supervisor_id" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                </div>
            </form>
        </field>
    </record>
    <record id='logistic_letter_tree' model='ir.ui.view'>
        <field name="name">lds.logistic.letter.tree</field>
        <field name="model">lds.logistic.letter</field>
        <field name="arch" type="xml">
            <tree string="Project">
                <field name="active" invisible="1"/>
                <field name="name" />
                <field name="supervisor_id" />
            </tree>
        </field>
    </record>

    <record id="logistic_letter_search" model="ir.ui.view">
        <field name="name">lds.logistic.letter.search</field>
        <field name="model">lds.logistic.letter</field>
        <field name="arch" type="xml">
            <search string="All Projects">
                <field name="name" string="Project"/>
                <field name="supervisor_id"/>
                <field name="tag_ids"/>
                <field name="delivery_id"/>
                <field name="state_id" />
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="1" string="Group By">
                    <filter name="groupby_status" context="{'group_by' : 'state_id'}" string="Status"/>
                    <filter name="groupby_model" context="{'group_by' : 'supervisor_id'}" string="Model"/>
                </group>
           </search>
        </field>
    </record>


    <record id='logistic_letter_kanban' model='ir.ui.view'>
        <field name="name">lds.logistic.letter.kanban</field>
        <field name="model">lds.logistic.letter</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="supervisor_id" />
                <field name="delivery_id" />
                <field name="state_id" />
                <field name="id" />
                <field name="tag_ids" />

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/> : <field name="supervisor_id"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_lds_logistic_letter" model="ir.actions.act_window">
        <field name="name">Logistic Letter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lds.logistic.letter</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="logistic_letter_search"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a contact in your contacts directory.
          </p><p>
            Odoo helps you easily track all activities related to
            a customer: discussions, history of business opportunities,
            documents, etc.
          </p>
        </field>
    </record>
    <record id="action_lds_logistic_letter_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="action_lds_logistic_letter"/>
    </record>
    <record id="action_lds_logistic_letter_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="action_lds_logistic_letter"/>
    </record>
    <record id="action_lds_logistic_letter_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.view_partner_form"/>
        <field name="act_window_id" ref="action_lds_logistic_letter"/>
    </record>
    <!-- Top menu item -->
    <menuitem name="LDS"
    id="menu_lds"
    sequence="110"
    web_icon="lds_stock,static/description/icon.png"
    groups="stock.group_stock_user"/>

    <menuitem id="projects_menu_lds"
    name="Projects"
    action="action_lds_logistic_letter"
    parent="menu_lds"
    sequence="2"/>
    
</odoo>